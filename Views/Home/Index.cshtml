@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <!-- BS Row 1 | Hello! -->
    <div class="row text-light main-message">
        <!-- Defines width & margin-left -->
        <div class="col-5">
            <!-- Defines font size & margin-top -->
            <h1 class="display-1">Hello!</h1>
            
        </div>
    </div>

    <!-- BS Row 2 | About me -->
    <div class="row text-light main-message mb-5">
        <!-- Defines width & margin-left -->
        <div class="col-8 mt-5 border-start border-dark">
            <p>My name is Liam Hughes, I'm a full stack developer based in Michigan. I have planned, designed, and developed several front end and back end projects that you can look into below! I specialize in the Javascript framework Angular, ASP.net's API & MVC frameworks, and SQL servers</p>
